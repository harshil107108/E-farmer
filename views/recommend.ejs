<% layout('/layouts/boilerplate') -%>
<body>
 
  <form action="/recommend-crop" method="POST">
    <div class="row">
      <div class="col-8 offset-2">
        <h2 class="offset-2 mb-3 ai-gradient-text">AI Crop Recommendation</h2>
    <div class="mb-3">
      <label for="soil" class="form-label">Soil Type:</label>
      <select name="soil" id="soil" class="form-select">
        <option value="Loamy">Loamy</option>
        <option value="Clay">Clay</option>
        <option value="Sandy">Sandy</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="temperature" class="form-label">Temperature (Â°C):</label>
      <input type="number" name="temperature" class="form-control" required />
    </div>

    <div class="mb-3">
      <label for="rainfall" class="form-label">Rainfall (mm):</label>
      <input type="number" name="rainfall" class="form-control" required />
    </div>

    <button type="submit" class="ai-button">Get Recommendation</button>
  </form>

  <% if (recommendation) { %>
    <div class="recommendation-box">
  <h3>Recommended Crop: <%= recommendation %></h3>
  </div>
  <% } %> <% if (error) { %>
    <div class="error-box">
  <p style="color: red"><%= error %></p>
</div>
  <% } %>
</div>
</div>
</body>
